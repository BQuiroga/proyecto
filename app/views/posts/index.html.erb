<h1>Listing posts</h1>

<table>
  <tr>
    <th>Titulo</th>
    <th>Contenido</th>
    <th>Likes</th>
    <th> Fecha</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.titulo %></td>
    <td><%= post.contenido %></td>
    <td><%= post.likes %></td>
    <td><%= post.created_at %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    
  </tr>
<% end %>
</table>

